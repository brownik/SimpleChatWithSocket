<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/etNewPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:id="@+id/etNewId"
                    android:layout_width="@dimen/sign_length"
                    android:layout_height="@dimen/sign_height"
                    android:background="@drawable/box_sign_text"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_id"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/bg_main"
                    android:textSize="@dimen/sign_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnIdCheck"
                    android:layout_width="@dimen/sign_check_btn_length"
                    android:layout_height="@dimen/sign_check_btn_heigh"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_sign_id_check_btn"
                    android:text="@string/btn_id_check"
                    android:textColor="@color/text_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="@dimen/sign_length"
                android:layout_height="@dimen/sign_height"
                android:layout_marginBottom="5dp"
                android:background="@drawable/box_sign_text"
                android:gravity="center_vertical"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textColorHint="@color/bg_main"
                android:textSize="@dimen/sign_text"
                app:layout_constraintBottom_toTopOf="@id/etNewPasswordCheck"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/etNewPasswordCheck"
                android:layout_width="@dimen/sign_length"
                android:layout_height="@dimen/sign_height"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_sign_text"
                android:gravity="center_vertical"
                android:hint="@string/hint_password_check"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textColorHint="@color/bg_main"
                android:textSize="@dimen/sign_text"
                app:layout_constraintBottom_toTopOf="@id/btnSignUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="@dimen/sign_length"
                android:layout_height="@dimen/sign_height"
                android:background="@drawable/box_sign_btn"
                android:text="@string/btn_sign_up"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sign_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
